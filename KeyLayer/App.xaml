<Application x:Class="KeyLayer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KeyLayer"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="HighlightBrush" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:BoolToBrushConverter x:Key="BoolToHighlightBrush"
                                    TrueBrush="{StaticResource HighlightBrush}"
                                    FalseBrush="{StaticResource TransparentBrush}"/>
    </Application.Resources>
</Application>
