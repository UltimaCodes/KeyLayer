<Window x:Class="KeyLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:KeyLayer.ViewModels"
        xmlns:local="clr-namespace:KeyLayer"
        Title="KeyLayer - Device Picker" Width="600" Height="400">

    <Window.Resources>
        <SolidColorBrush x:Key="HighlightBrush" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>
        <local:BoolToBrushConverter x:Key="BoolToHighlightBrush"
                                    TrueBrush="{StaticResource HighlightBrush}"
                                    FalseBrush="{StaticResource TransparentBrush}" />
    </Window.Resources>

    <Window.DataContext>
        <vm:DeviceListViewModel x:Name="ViewModel"/>
    </Window.DataContext>

    <Grid Background="#1E1E1E" Margin="20">
        <StackPanel>
            <TextBlock Text="Select Input Device" Foreground="White" FontSize="18" Margin="0 0 0 10"/>
            <ListBox ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}" BorderThickness="0"
                     Background="#2E2E2E" Foreground="White" FontSize="14">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{Binding WasPressed, Converter={StaticResource BoolToHighlightBrush}}"
                                Margin="5" CornerRadius="8">
                            <TextBlock Text="{Binding CleanName}" Margin="8,4"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>